@model IEnumerable<Data.Models.Division>

@{
    ViewData["Title"] = "Index";
}

<h1>Divisions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Captain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lieutenant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Captain.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lieutenant.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DivisionNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DivisionNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DivisionNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



<p style="text-align:center;"><img src="/css/anime-bleach.gif" alt="Logo"></p>