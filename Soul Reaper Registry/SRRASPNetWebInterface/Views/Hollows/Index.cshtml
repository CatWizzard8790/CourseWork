@model IEnumerable<Data.Models.Hollow>

@{
    ViewData["Title"] = "Index";
}

<h1>Hollows</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HollowClassification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeaponPower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoulReaper)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HollowClassification.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeaponPower.FirstForm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoulReaper.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
